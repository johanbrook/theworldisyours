---
layout: layouts/main.vto
---

<header class="HomeHeader">
    <h1>{{ title |> split_letters }}</h1>
    <p class="HomeHeader__SubTitle">{{ subtitle }}</p>
    
    {{ if current_trip }}
        <p class="HomeHeader__CurrentTrip">
            <time title="{{ build.date |> date }}">Just nu</time> skriver vi om <a href="/trips/{{ current_trip.trip |> to_slug }}">{{ current_trip.trip }}</a>
        </p>
    {{ /if }}
</header >

<div class="PostList h-feed" transform-images="{{ image_transform_attr }}">
    {{ for post of results }}
    <article class="Post h-entry">
        <header>
            <h1>
                <a href="{{ post.url }}" class="u-url">{{ post.title }}</a>
            </h1>
            <div>
                <p>
                    <time datetime="{{ post.date |> date("ATOM") }}" class="dt-published" pubdate>{{ post.date |> date("HUMAN_DATE")}}</time>
                </p>
                
                <p>
                    <span class="author">Av {{ post.author }}</span>
                    {{ if post.trip }}
                    <span class="muted">Â·</span> Om <a href="/trips/{{ post.trip |> to_slug }}">{{ post.trip }}</a>
                    {{ /if }}
                </p>
            </div>
        </header>

        <div class="e-content">{{ post.content |> md }}</div>
    </article>
    {{ /for }}
</div>

{{ if pagination.totalPages > 1 }}
    {{ include "templates/page-nav.vto" { pagination: pagination } }}
{{ /if }}
