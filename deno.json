{
    "imports": {
        "lume/": "https://deno.land/x/lume@v2.2.1/",
        "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@v0.5.1/",
        "std/": "https://deno.land/std@0.224.0/"
    },
    "tasks": {
        "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
        "build": "deno task lume",
        "serve": "deno task lume -s",
        "cms": "deno task lume cms",
        "deploy": "deployctl deploy --prod"
    },
    "compilerOptions": {
        "types": ["lume/types.ts"],
        "strict": true
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "singleQuote": true,
        "indentWidth": 4,
        "exclude": ["./_site"]
    },
    "deploy": {
        "project": "d6d6f641-c1b3-4c21-9dee-4b84da0511ec",
        "include": ["deno.json", "deno.lock", "_cms.ts", "_config.ts"],
        "entrypoint": "_cms.ts"
    }
}
